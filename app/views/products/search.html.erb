<div class="row">
    <div class="col-md-12">
      <% @products.each do |product| %>
        <div class="article">
          <h1 class="article-title"><%= link_to product.name, product %></h1>
          <p class="article-content"><%= product.description %></p>
        </div>
      <% end %>
    </div>
  </div>