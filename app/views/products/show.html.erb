<% provide(:title, @product.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="product_info">
            <div class="thumbnail">
              <%= image_tag @product.product_image %>
              <div class="caption">
                <h3><%= @product.name %></h3>
                <%= social_share_button_tag(@product.name) %>
                <p><%= @product.description %></p>
                <p><%= link_to edit_product_path(@product), class: "btn btn-primary" do %>Edit<% end %>
                <%= link_to @product, method: :delete, data: { confirm: 'Sure or not?' }, class: "btn btn-danger" do %>Delete<% end %> </p>
              </div>
            </div>
        </section>
    </aside>
</div>